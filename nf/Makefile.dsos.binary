### Use this to build an executable DSOS image

SHELL := /bin/bash -O extglob -c
export RTE_TARGET = x86_64-native-linuxapp-gcc

CC = x86_64-elf-gcc
NASM = nasm
QEMU = qemu-system-x86_64

ARCH = x86_64
BINARY = dsos-$(ARCH).bin
ISO = dsos-$(ARCH).iso

LINKER_SCRIPT = linker.ld
GRUB_CFG = grub.cfg
LIBC = libc.a

